    const endDateInput = document.getElementById('end-date');

    // Get the current date
    const currentDate = new Date();

    // Get the maximum date you want to allow (e.g., 2023-12-31)
    const maxDate = new Date('2023-12-31');

    // Format the current date and the maximum date in YYYY-MM-DD format
    const formattedCurrentDate = currentDate.toISOString().slice(0, 10);
    const formattedMaxDate = maxDate.toISOString().slice(0, 10);

    // Set the 'min' and 'max' attributes of the date input elements
    startDateInput.setAttribute('min', formattedCurrentDate);
    endDateInput.setAttribute('max', formattedMaxDate);
</script>



